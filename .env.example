# Watch Collection Tracker - Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=watch_tracker
POSTGRES_USER=watchuser
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ============================================
# Security Configuration
# ============================================
# Generate a strong secret key:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_GENERATE_RANDOM_SECRET_KEY

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# CORS Configuration
# ============================================
# Production: Use your domain
# ALLOWED_ORIGINS=https://yourdomain.com
# Development: Use localhost
ALLOWED_ORIGINS=http://localhost:3000,http://localhost

# ============================================
# Application Configuration
# ============================================
# HTTP port for Nginx
HTTP_PORT=8080

# HTTPS port for Nginx (uncomment for production with SSL)
# HTTPS_PORT=443

# Maximum file upload size in bytes (20MB default)
MAX_UPLOAD_SIZE=20971520

# ============================================
# Redis Configuration
# ============================================
# Redis password for production (leave empty for development)
REDIS_PASSWORD=

# ============================================
# Frontend Configuration
# ============================================
# API URL for frontend (use relative path for same domain)
VITE_API_URL=/api

# ============================================
# Monitoring (Future)
# ============================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://your_sentry_dsn
